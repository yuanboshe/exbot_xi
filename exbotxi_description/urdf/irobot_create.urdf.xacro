      </collision>
    </link>
    
    <joint name="base_l_wheel_joint" type="fixed">
      <origin xyz="0 0.13 0.015" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="left_wheel_link"/>
      <axis xyz="0 1 0"/>
